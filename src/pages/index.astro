---
import Layout from '../layouts/Layout.astro'
import Navbar from '../components/react-islands/navbar.tsx'
import Hero from '../components/react-islands/hero.tsx'
import HomeMatrixSection from '../components/react-islands/home-matrix-section.tsx'
import HomeCertExpTitle from '../components/react-islands/home-cert-exp-title.tsx'
import About from '../components/react-islands/about.tsx'
import DataLifecycle from '../components/react-islands/data-lifecycle.tsx'
import TechMarquee from '../components/react-islands/tech-marquee.tsx'
import Footer from '../components/react-islands/footer.tsx'
import SmoothScroll from '../components/react-islands/smooth-scroll.tsx'
import SectionBlend from '../components/react-islands/section-blend.tsx'
---

<Layout title="AI-Native Product Builder | Portfolio">
  <SmoothScroll client:load>
    <Navbar client:load />
    <main>
      <Hero client:load />
      <HomeMatrixSection client:load />
      <HomeCertExpTitle client:load />
      <SectionBlend client:load />
      <About client:visible />
      <DataLifecycle client:visible />
      <TechMarquee client:visible />
      <Footer client:visible />
    </main>
  </SmoothScroll>
</Layout>
