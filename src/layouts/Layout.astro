---
import '@fontsource/playfair-display'
import '@fontsource/geist-mono'
import '../styles/global.css'
import { ViewTransitions } from 'astro:transitions'
import ParticlesBackground from '../components/react-islands/particles-background.tsx'
import SplashCursor from '../components/react-islands/splash-cursor.tsx'

interface Props {
  title?: string
  description?: string
}

const { 
  title = 'AI-Native Product Builder | Portfolio',
  description = 'System Architect & Interface Designer crafting intelligent digital experiences'
} = Astro.props

const pathname = Astro.url.pathname;
let backColor = { r: 0, g: 0, b: 1 }; // blue
const showParticles = !pathname.includes('machine-learning'); // No mostrar partículas en ML
if (pathname.includes('machine-learning')) {
  backColor = { r: 1, g: 0, b: 0 }; // red
} else if (pathname.includes('medio-ambiente-sociedad')) {
  backColor = { r: 0, g: 1, b: 0 }; // green
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="font-sans antialiased overflow-x-hidden">
    <SplashCursor client:load BACK_COLOR={backColor} />
    {showParticles && <ParticlesBackground client:load density={0.00008} />}
    <div class="noise-overlay"></div>
    <slot />
    <script>
      import { inject } from '@vercel/analytics'
      inject()
    </script>
  </body>
</html>

<style is:global>
  :root {
    --font-playfair: 'Playfair Display', 'Georgia', serif;
    --font-geist-mono: 'Geist Mono', 'Geist Mono Fallback', monospace;
  }
</style>
